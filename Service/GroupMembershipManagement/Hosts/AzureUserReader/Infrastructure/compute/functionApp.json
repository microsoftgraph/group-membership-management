{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Function app name."
      }
    },
    "kind": {
      "type": "string",
      "allowedValues": ["functionapp", "linux", "container"],
      "defaultValue": "functionapp",
      "metadata": {
        "description": "Function app kind."
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Function app location."
      }
    },
    "servicePlanName": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Service plan name."
      }
    },
    "secretSettings": {
      "type": "array",
      "metadata": {
        "description": "Array of key vault references to be set in app settings"
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "apiVersion": "2018-02-01",
      "type": "Microsoft.Web/sites",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "kind": "[parameters('kind')]",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('servicePlanName'))]",
        "clientAffinityEnabled": false,
        "httpsOnly": true,
        "siteConfig": {
          "appSettings": "[parameters('secretSettings')]"
        }
      },
      "identity": {
        "type": "SystemAssigned"
      }      
    }   
  ],
  "outputs": {
    "msi": {
      "type": "string",
      "value": "[reference(concat('Microsoft.Web/sites/', parameters('name')), '2018-02-01', 'Full').identity.principalId]"
    },
    "hostName": {
      "type": "string",
      "value": "[concat('https://', reference(resourceId('Microsoft.Web/sites', parameters('name')), '2018-02-01').defaultHostName)]"
    },
    "adfKey": {
      "type": "string",
      "value": "[listkeys(concat(resourceId('Microsoft.Web/sites', parameters('name')), '/host/default'), '2018-11-01').functionKeys.default]"
    }
  }
}
