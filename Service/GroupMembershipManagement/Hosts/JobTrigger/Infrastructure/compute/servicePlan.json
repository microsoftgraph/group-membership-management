{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "name": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Service plan name."
      }
    },
    "sku": {
      "type": "string",
      "defaultValue": "Y1",
      "allowedValues": [
        "D1",
        "F1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P1V2",
        "P2V2",
        "P3V2",
        "I1",
        "I2",
        "I3",
        "Y1"
      ],
      "metadata": {
        "description": "Service plan sku."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "West US 2",
      "allowedValues": [
        "South Central US",
        "West Europe",
        "East US",
        "North Europe",
        "West US 2"
      ],
      "metadata": {
        "description": "Service plan location."
      }
    }
  },
  "variables": {},
  "resources": [
    {
      "name": "[parameters('name')]",
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2018-02-01",
      "location": "[parameters('location')]",      
      "properties": {
        "name": "[parameters('name')]",
        "computeMode": "Dynamic"
      },
      "sku": {
        "name": "[parameters('sku')]",
        "tier": "Dynamic"
      }
    }
  ],
  "outputs": {}
}
